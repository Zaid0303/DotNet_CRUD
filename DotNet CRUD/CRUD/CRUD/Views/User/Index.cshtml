@model IEnumerable<CRUD.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2 class="text-center display-4 mb-4">Our Products</h2>

<!-- Search Box -->
<div class="search-box d-flex justify-content-center mb-4">
    <form asp-action="Search" method="post" class="input-group w-50">
        <input type="text" class="form-control" id="searchInput" name="xyz" placeholder="Search products..." />
        <button type="submit" class="btn btn-primary ms-2">
            <i class="fas fa-search"></i> <!-- Search Icon -->
        </button>
    </form>
</div>


<!-- Product Grid -->
<div class="row g-4 product-grid" id="productGrid">
    @foreach (var item in Model)
    {
        <div class="col-12">
            <div class="card product-card">
                <img src="@item.Image" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-price text-success">$@item.Price</p>
                    <button class="btn btn-primary">View More</button>
                </div>
            </div>
        </div>
    }
</div>
